<% provide(:title, 'CategoryType list') %>
<h1>CategoryType list</h1>

<div class="span10 offset1">
  <table class="table table-bordered">

    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @category_types.each do |category_type| %>
        <tr>
          <td><%= category_type.id %></td>
          <td><%= category_type.name %></td>
          <td><%= category_type.description %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>