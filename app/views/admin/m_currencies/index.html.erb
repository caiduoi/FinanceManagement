<% provide(:title, 'Currency list') %>
<h1>Currency list</h1>

<div class="span10 offset1">
  
  <%= search_form_for [:admin, @search] do |f| %>
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, list: "browsers" %>
    <datalist id="browsers">
      <% M::Currency.all.each do |currency| %>
        <option value="<%= currency.name %>"></option>
      <% end %>
    </datalist>
    
    <%= f.submit "Search" %>
  <% end %>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Code</th>
        <th>Rate</th>
        <th>Update Time</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |currency| %>
        <tr>
          <td><%= currency.id %></td>
          <td><%= currency.name %></td>
          <td><%= currency.code %></td>
          <td><%= currency.rate %></td>
          <td><%= currency.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to "Export CSV", admin_m_currencies_path(format: "csv"), class: "btn btn-medium btn-primary" %>
  <%= link_to "Import CSV", "#" %>

  <h2>Import Currency</h2>
  
  <%= form_tag import_admin_m_currencies_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV", class: "btn btn-medium btn-primary" %>
  <% end %>
  
</div>
