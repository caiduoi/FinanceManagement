<% provide(:title, 'Currency list') %>
<h1>Currency list</h1>

<div class="span10 offset1">

  <%= search_form_for [:admin, @search] do |f| %>
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, list: "browsers" %>
    <datalist id="browsers">
      <% M::Currency.all.each do |currency| %>
        <option value="<%= currency.name %>"></option>
        <_tags>
      <% end %>
    </datalist>
    
    <%= f.submit "Search" %>
  <% end %>
  
  <table class="table table-bordered">

    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Code</th>
        <th>Balance</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |currency| %>
        <tr>
          <td><%= currency.id %></td>
          <td><%= currency.name %></td>
          <td><%= currency.code %></td>
          <td><%= currency.balance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>